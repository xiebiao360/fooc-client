{
  "name": "fooc-client",
  "version": "0.0.1",
  "main": "dist/main/_.js",
  "author": {
    "name": "xiebiao"
  },
  "description": "the template of pack electron app by vite",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node -r ts-node/register script/build --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node -r ts-node/register script/build --env=production",
    "build": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder"
  },
  "build": {
    "appId": "xiebiaoa@dcits.com",
    "files": [
      "!node_modules",
      "dist/**",
      "!dist/win-unpacked"
    ],
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "ant-design-vue": "^2.0.0-rc.7"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@types/minimist": "^1.2.1",
    "@types/wait-on": "^5.2.0",
    "@vue/compiler-sfc": "^3.0.4",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.5",
    "ora": "^5.2.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-esbuild": "^2.6.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^1.0.0-rc.13",
    "vue": "^3.0.4",
    "vue-router": "^4.0.2",
    "vuex": "^4.0.0-rc.2",
    "wait-on": "^5.2.1"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
